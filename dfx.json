            "metadata": [
                { "name": "candid:service" }
            ]
        }
    },
    "networks": {
        "staging": {
            "providers": [
                "https://icp0.io"
            ],
            "type": "persistent"
        },
        "mainnet": {
            "providers": [
                "https://icp0.io"
            ],
            "type": "persistent"
