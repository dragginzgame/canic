            "wasm": ".dfx/local/canisters/root/root.wasm",
            "shrink": true,
            "gzip": true,
            "metadata": [
                {
                    "name": "candid:service"
                }
            ],
            "dependencies": [
                "example",
                "game",
                "instance",
                "player_hub"
            ]
        },
        "example": {
            "type": "custom",
            "candid": ".dfx/local/canisters/example/example.did",
            "build": "bash -c 'scripts/app/build.sh example'",
            "wasm": ".dfx/local/canisters/example/example.wasm",
            "shrink": true,
            "gzip": true,
            "metadata": [
                {
                    "name": "candid:service"
                }
            ]
        },
        "game": {
            "type": "custom",
            "candid": ".dfx/local/canisters/game/game.did",
            "build": "bash -c 'scripts/app/build.sh game'",
            "wasm": ".dfx/local/canisters/game/game.wasm",
            "shrink": true,
            "gzip": true,
            "metadata": [
                { "name": "candid:service" }
            ]
        },
        "instance": {
            "type": "custom",
            "candid": ".dfx/local/canisters/instance/instance.did",
